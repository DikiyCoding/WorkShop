<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- UI Examples -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.RecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- UI Dialogs -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#C4C4C4</item>
        <item name="colorControlActivated">#FFFF00</item>
    </style>

    <style name="CollapsingToolbarTitleDefault" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- UI Material CoordinatorLayout Resizable CollapsingToolbar Title-->
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarTitleAppearance">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ToolbarSubtitleAppearance">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ActionOverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextAppearance">@style/ToolbarTitleAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleAppearance</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowButton</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="CollapsedTitleState" parent="CollapsingToolbarTitleDefault">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExpandedTitleState" parent="CollapsingToolbarTitleDefault">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/minsk</item>
    </style>

    <!-- UI Material CollapsingMenuItem -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom Progress Bar -->
    <style name="CustomTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/montreal</item>
        <item name="colorControlActivated">@color/vilnius</item>
    </style>

</resources>
