<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:background="@android:color/black"
    tools:layout_height="56dp">

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/horizontal_padding_middle"
        android:layout_marginLeft="@dimen/horizontal_padding_middle"
        android:layout_marginEnd="@dimen/horizontal_padding_middle"
        android:layout_marginRight="@dimen/horizontal_padding_middle"
        android:layout_marginBottom="@dimen/vertical_padding_small"
        android:background="@drawable/shape_coordinator_search_bg"
        android:drawableStart="@drawable/ic_search"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="@dimen/default_padding"
        android:fontFamily="@font/montserrat_medium"
        android:hint="@string/coordinator_search_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/horizontal_padding_middle"
        android:paddingLeft="@dimen/horizontal_padding_middle"
        android:paddingTop="0dp"
        android:paddingEnd="?actionBarSize"
        android:paddingRight="?actionBarSize"
        android:paddingBottom="0dp"
        android:singleLine="true"
        android:textColor="@color/colorCoordinatorSearchText"
        android:textColorHint="@color/colorCoordinatorSearchText"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Search text" />

    <ImageView
        android:id="@+id/clear_search"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/coordinator_search_cont_desc"
        android:paddingStart="@dimen/horizontal_padding_small"
        android:paddingLeft="@dimen/horizontal_padding_small"
        android:paddingEnd="@dimen/horizontal_padding_middle"
        android:paddingRight="@dimen/horizontal_padding_middle"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/search"
        app:layout_constraintEnd_toEndOf="@+id/search"
        app:layout_constraintTop_toTopOf="@+id/search"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>