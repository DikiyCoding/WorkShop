<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/coordinator_content_text"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="start|center"
            android:includeFontPadding="false"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="Поиск магазинов"
            android:textAllCaps="false"
            android:textColor="@color/minsk"
            android:textSize="15sp"
            app:backgroundTint="@color/paris"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_search"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconTint="@color/minsk"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            app:boxBackgroundColor="@color/paris"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:endIconDrawable="@drawable/ic_close_gray"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            app:boxStrokeWidth="0dp"
            app:startIconDrawable="@drawable/ic_back_gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Поиск магазинов"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Поиск магазинов"
                android:textColor="@color/moscow"
                android:textColorHint="@color/minsk"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>